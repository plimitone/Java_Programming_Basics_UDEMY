package tutorials.basic;

public class Arrays {
	public static void main(String[] args) {
		int x; //creating one box in memory to store the int value
		
		int[] myArray; //declare an array of int that is empty, called myArray
		myArray = new int[4]; //now create the array and say there are 4 elements in it (0, 1, 2, 3)
		
		x = 5;
		
		myArray[0] = x;
		myArray[1] = 3;
		myArray[2] = 0;
		myArray[3] = 1;
		
		System.out.println(myArray[0]);
		
		 for (int i = 0; i < myArray.length; i++) {
			System.out.println(myArray[i]);
		}
	}
}
